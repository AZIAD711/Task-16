{
  "compilerOptions": {
    "target": "es2015",        
    "lib": ["es2015", "dom"],  
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "./dist"          
  },
  "include": ["src/**/*"],       
  "exclude": ["node_modules"]    
}